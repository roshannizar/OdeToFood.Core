@using OdeToFood.Core
@model Restaurant

<div class="card card-deck">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <span>Location: @Model.Location</span>
        <span class="badge badge-secondary">Cuisine: @Model.Cuisine</span>
    </div>

    <div class="card-footer">
        <a class="btn btn-primary btn-sm" asp-page="./Detail" asp-route-restaurantId="@Model.Id">Details</a>
        <a class="btn btn-primary btn-sm" asp-page="./Edit" asp-route-restaurantId="@Model.Id">Edit</a>
        <a class="btn btn-primary btn-sm" asp-page="./Delete" asp-route-restaurantId="@Model.Id">Delete</a>
    </div>
</div>